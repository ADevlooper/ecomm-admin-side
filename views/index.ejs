<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
  <div class="flex min-h-screen">

    <aside class="w-64 bg-gray-900 text-white p-6">
      <h1 class="text-2xl font-bold mb-6">E-Comm Admin</h1>

      <nav class="space-y-4">
        <a href="/" class="block py-2 px-3 rounded bg-gray-700">Products</a>
        <a href="/products/new" class="block py-2 px-3 rounded hover:bg-gray-700">Add Product</a>
      </nav>
    </aside>

    <main class="flex-1 p-10">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-semibold">Products</h2>
        <a href="/products/new"
           class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700">
          + Add Product
        </a>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="w-full text-left">
          <thead class="bg-gray-200">
            <tr>
              <th class="p-3">Image</th>
              <th class="p-3">Name</th>
              <th class="p-3">Price</th>
              <th class="p-3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(product => { %>
              <tr class="border-b">
                <td class="p-3">
                  <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" class="w-16 h-16 rounded shadow" />
                  <% } else { %>
                    <span class="text-gray-500">No Image</span>
                  <% } %>
                </td>

                <td class="p-3 font-semibold"><%= product.name %></td>
                <td class="p-3">â‚¹<%= product.price %></td>

                <td class="p-3 flex gap-3">
                  <a href="/products/edit/<%= product.id %>"
                     class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">
                    Edit
                  </a>

                  <form action="/products/delete/<%= product.id %>" method="POST">
                    <button
                      class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700"
                      onclick="return confirm('Delete this product?')">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>
